---
import MainLayout from "../layouts/MainLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import SampleImage from "../../public/sample.jpg";

const data = [
  {
    id: 1,
    title: "How to Build a Minimalist Wardrobe",
    description:
      "Learn how to create a versatile and stylish wardrobe with a few essential pieces that can be mixed and matched for any occasion.",
    image: SampleImage,
  },
  {
    id: 2,
    title: "The Ultimate Guide to Sustainable Living",
    description:
      "Explore simple yet effective ways to reduce your carbon footprint, from eco-friendly shopping tips to sustainable home practices.",
    image: SampleImage,
  },
  {
    id: 3,
    title: "5 Must-Read Books for Personal Growth",
    description:
      "Check out this list of thought-provoking books that can help you develop a positive mindset and unlock your full potential.",
    image: SampleImage,
  },
  {
    id: 4,
    title: "The Best Coffee Shops in [Your City]",
    description:
      "Discover hidden gems and popular spots for the perfect cup of coffee, along with cozy atmospheres for working or relaxing.",
    image: SampleImage,
  },
  {
    id: 5,
    title: "How to Start a Successful Side Hustle",
    description:
      "Turn your passions into profits! This guide covers everything you need to know about starting and growing a side business.",
    image: SampleImage,
  },
  {
    id: 6,

    title: "10 Ways to Boost Your Productivity at Work",
    description:
      "From time management techniques to mindset shifts, these tips will help you stay focused, motivated, and efficient throughout your workday.",
    image: SampleImage,
  },
  {
    id: 7,

    title: "Exploring the Future of Artificial Intelligence",
    description:
      "An in-depth look at how AI is shaping industries, from healthcare to finance, and what it means for the future of work and society.",
    image: SampleImage,
  },
  {
    id: 8,

    title: "Why You Should Start Meditating Today",
    description:
      "A beginner's guide to meditation, including the health benefits, different techniques, and tips for making it part of your daily routine.",
    image: SampleImage,
  },
  {
    id: 9,

    title: "How to Create a Stunning Home Office on a Budget",
    description:
      "Transform your workspace with affordable furniture, decor, and organizational hacks to maximize both comfort and productivity.",
    image: SampleImage,
  },

  {
    id: 21,

    title: "Traveling on a Budget: Tips for Saving on Your Next Trip",
    description:
      "Find out how to travel without breaking the bank, with money-saving strategies for flights, accommodations, food, and activities.",
    image: SampleImage,
  },
];
---

<MainLayout title="Home">
  <section class="container max-w-full py-8">
    <h1 class="text-5xl font-bold text-center tracking-wide py-4">Top Blogs</h1>
    <main class="grid gap-x-10 gap-y-16 grid-cols-3 py-14">
      {
        data
          ? data.map((article, index) => {
              return (
                <BlogPost
                  key={index}
                  id={article.id}
                  title={article.title}
                  image={article.image}
                  description={article.description}
                />
              );
            })
          : null
      }
    </main>
  </section>
</MainLayout>
